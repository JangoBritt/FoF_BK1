{
  "namespace": "chest",
  "small_chest_screen": {
    "$new_container_title|default": "$container_title",
    "modifications": [
      {
        "array_name": "variables",
        "operation": "insert_back",
        "value": [
          {
            "requires": "($new_container_title = 'sophisticated_backpack:backpack_default')",
            "$screen_content": "sophisticated_backpack_default.screen",
            "$screen_bg_content": "common.screen_background"
          },
          {
            "requires": "($new_container_title = 'sophisticated_backpack:backpack_default' and $pocket_screen)",
            "$screen_content": "sophisticated_backpack_default.screen",
            "$screen_bg_content": "common.screen_background"
          }
        ]
      }
    ]
  }
}